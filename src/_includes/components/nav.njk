<nav class="side-nav zui skinny-scrollbar">
  <header>
    <a href="{{ '/' | url }}"><svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 20.5 48" style="enable-background:new 0 0 20.5 48;" xml:space="preserve"><polygon style="fill:var(--docs-orange-color);" points="9.6,0 0,0 10.8,24 0,48 9.6,48 20.5,24 "/></svg>Booster</a>
  </header>
  <section>
    {% set navPages = collections.sortAZ %}
    {% macro NavItem(doc) %}
    {% if doc.data.system == page.url.split('/')[2] %}
      {% if doc.data.parent == page.url.split('/')[3] %}
        <li{% if doc.url == page.url %} aria-current="current"{% endif %}>
          <a href="{{ doc.url | url }}">{{ doc.data.title }}</a>
        </li>
      {% endif %}
    {% endif %}
    {% endmacro %}

    <ul>
    {% for doc in navPages %}
      {{ NavItem(doc) }}
    {% endfor %}
    </ul>
  </section>
</nav>
